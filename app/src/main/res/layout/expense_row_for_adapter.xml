<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/tvExpenseQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_twenty"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_twenty_five"
        android:text="100 â‚¬"/>

    <TextView
        android:id="@+id/tvExpenseDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_twenty_five"
        android:text="description"/>

    <Button
        android:id="@+id/btDeleteExpense"
        android:layout_width="@dimen/size_fifty"
        android:layout_height="@dimen/size_fifty"
        android:background="@android:drawable/ic_delete"/>

</LinearLayout>